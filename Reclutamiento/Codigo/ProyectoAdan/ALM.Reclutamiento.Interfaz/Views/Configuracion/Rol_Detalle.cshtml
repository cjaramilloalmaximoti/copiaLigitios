@model ALM.Empresa.Entidades.ERol
<div class="divMarcoBusqueda">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="margin-top:5px">
            <div class="col-xs-12 col-sm-4 col-md-2 col-lg-2">
                <label for="lblNombre" class="labelColumn tamLetra regularTipografia">Nombre</label>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-10 col-lg-10">
                @Html.TextBoxFor(m => m.NombreRol, new { data_bind = "value:NombreRol", @class = "form-control inputColumn inputpe tamLetra bookTipografia", id = "txtNombreRol", })
                @Html.ValidationMessageFor(model => model.NombreRol, null, new { @class = "text-danger tamLetra bookTipografia" })
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="margin-top:5px">
            <div class="col-xs-12 col-sm-4 col-md-3 col-lg-3">
                <label for="chkEstatus" class="labelColumn tamLetra regularTipografia">Es Activo</label>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-9 col-lg-9" style="margin-top:5px">
                <input type="checkbox" id="chkEstatus" checked="checked" />
            </div>
        </div>          
    </div>   
    <div class="row">
    </div>
    <div style="clear:both; text-align:right; width:100%">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:5px">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <a onmouseover="" class="linkPermisoRol bookTipografia" style="cursor: pointer;">Editar permisos</a>
            </div>
        </div>
    </div>
    <div style="clear:both; text-align:right; width:100%">
        <hr />
        <button type="button" value="Buscar" id="btnGuardar" name="Guardar" class="btnGuardarDespuesLink pull-right">
            <img src="@Url.Content("~/Imagenes/Guardar.png")" class="imagBotones" /> Guardar
        </button>
        <button type="button" value="Buscar" id="btnCancelar" name="Cancelar" class="btnCancelar pull-right">
            <img src="@Url.Content("~/Imagenes/Cancelar.png")" class="imagBotones" /> Cancelar
        </button>
    </div>
</div>