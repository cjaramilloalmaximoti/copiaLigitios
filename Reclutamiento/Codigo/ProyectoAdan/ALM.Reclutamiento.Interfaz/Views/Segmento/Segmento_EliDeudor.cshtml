@model ALM.Empresa.Entidades.ESegmento
<div class="divMarcoBusqueda">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:5px">
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                @Html.LabelFor(m => m.Archivo, new { @class = "control-label tamLetra regularTipografia" })
            </div>
            <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
                @Html.TextBoxFor(model => model.Archivo_3, new { @type = "file", @class = "input-file form-control inputColumn inputpe tamLetra bookTipografia EliminarDeudores", placeholder = "Archivo xlsx", style = "width:100%;" })
                @Html.ValidationMessageFor(model => model.Archivo_3, null, new { @class = "text-danger tamLetra bookTipografia" })
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:5px">
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                <label for="lbl" id="lblNombre" class="labelColumn tamLetra regularTipografia">Solo Desactivar</label>
            </div>
            <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9" style="margin-top:5px">
                @Html.CheckBoxFor(m => m.EsActivo, new { @class = "", id = "chkEliminar", })
            </div>
        </div>
    </div>
    <div style="clear:both; text-align:right; width:100%">
        <hr />
    </div>
</div>
<div id="containerProgressPopUp" class="containerProgress">
    <div class="contentImageProgress">
        <img alt="Espere ..." src="~/Imagenes/progress.gif" />
    </div>
    <div class="backgroundProgress">
    </div>
</div>

