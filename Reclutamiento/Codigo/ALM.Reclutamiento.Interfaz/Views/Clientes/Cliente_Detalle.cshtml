                @Html.LabelFor(m => m.Contacto_Telefono, new { @class = "control-label tamLetra regularTipografia" })
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                @Html.TextBoxFor(m => m.Contacto_Telefono, new { @class = "form-control inputColumn inputpe tamLetra bookTipografia", id = "txtContacto_Telefono", placeholder = "Contacto Teléfono" })
                @Html.ValidationMessageFor(model => model.Contacto_Telefono, null, new { @class = "text-danger tamLetra bookTipografia" })
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="margin-top:5px">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.Direccion, new { @class = "control-label tamLetra regularTipografia" })
            </div>
            <div class="col-xs-12 col-sm-7 col-md-7 col-lg-7">
                @Html.TextAreaFor(m => m.Direccion, new { @class = "form-control inputColumn inputpe tamLetra bookTipografia textArea", id = "txtDireccion", rows = "3", disabled = "disabled", placeholder = "Dirección" })
                @Html.ValidationMessageFor(model => model.Direccion, null, new { @class = "text-danger tamLetra bookTipografia" })
            </div>
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 mostrarLink" style="margin-top:5px; visibility:visible !important;">
                <a id="lnkDireccionEmpresa" href="#" class="ControlEditar lnkDireccionEmpresa" style="display:inline !important; visibility:visible !important;">
                    <span class="glyphicon glyphicon-search"></span>
                </a>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="margin-top:5px">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.Comentarios, new { @class = "control-label tamLetra regularTipografia" })
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
