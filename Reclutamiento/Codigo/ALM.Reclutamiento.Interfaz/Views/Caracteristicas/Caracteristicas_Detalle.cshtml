@model ALM.Reclutamiento.Entidades.ECaracteristicas

<div class="divMarcoBusqueda">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="margin-top:5px">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.Nombre, new { @class = "labelColumn tamLetra regularTipografia" })
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control inputColumn inputpe tamLetra bookTipografia", id = "txtNombre", placeholder="Nombre" })
                @Html.ValidationMessageFor(model => model.Nombre, null, new { @class = "text-danger tamLetra bookTipografia" })
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="margin-top:5px">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.Descripcion, new { @class = "labelColumn tamLetra regularTipografia" })
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control inputColumn inputpe tamLetra bookTipografia", id = "txtDescripcion", placeholder="Descripción" })
                @Html.ValidationMessageFor(model => model.Descripcion, null, new { @class = "text-danger tamLetra bookTipografia" })
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="margin-top:5px;">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.IdTipoControl, new { @class = "labelColumn tamLetra regularTipografia" })
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                 @Html.DropDownListFor(m => m.IdTipoControl, Enumerable.Empty<SelectListItem>(), new { @class = "control-label tamLetra regularTipografia", id = "cmbTipoCampo" })
                @Html.ValidationMessageFor(model => model.IdTipoControl, null, new { @class = "text-danger tamLetra bookTipografia" })
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="margin-top:5px">
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                @Html.LabelFor(m => m.EsActivo, new { @class = "control-label tamLetra regularTipografia" })
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                @Html.CheckBoxFor(m => m.EsActivo, new { @class = "", id = "chkActivo", })
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:5px;">
            <div class="col-xs-12 col-sm-4 col-md-2 col-lg-2">
                @Html.LabelFor(m => m.IdCategoria, new { @class = "labelColumn tamLetra regularTipografia" })
            </div>
            <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
                <div class="divMarcoBusqueda" id="divCategorias" style="overflow:auto; height:200px;">
                    <ul class="list-group checked-list-box" id="ulCategorias"></ul>
                </div>
                <!--
                <select id="cmbCategoria" name="cmbCategoria" style="width:190px" class="form-control inputColumn inputpe tamLetra bookTipografia"></select>
                @Html.ValidationMessageFor(model => model.IdCategoria, null, new { @class = "text-danger tamLetra bookTipografia" })
            -->
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="margin-top:5px;">
            <div class="col-xs-12 col-sm-4 col-md-2 col-lg-2">
            </div>
            <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10">
                <span style="color: red;" id="spanLeyenda"></span>
            </div>
        </div>
        <br/>
        <div class="divMarcoBusqueda" id="divAdministrador">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6" style="margin-top:5px;">
                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.Aprobada, new { @class = "labelColumn tamLetra regularTipografia" })
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                        <div id="divAprobada">
                            <input type="radio" id="rad1" name="radAprobada" value="0" /><label for="radio">Pendiente</label>
                            <input type="radio" id="rad2" name="radAprobada" value="1" /><label for="radio">Aprobada</label>
                            <input type="radio" id="rad3" name="radAprobada" value="2" /><label for="radio">Rechazada</label>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="margin-top:5px">
                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                        @Html.LabelFor(m => m.Comentario, new { @class = "labelColumn tamLetra regularTipografia" })
                    </div>
                    <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                        @Html.TextAreaFor(m => m.Comentario, new { @class = "form-control inputColumn inputpe tamLetra bookTipografia", id = "txtComentario", Rows = "3", placeholder="Comentario de Notificación" })
                        @Html.ValidationMessageFor(model => model.Comentario, null, new { @class = "text-danger tamLetra bookTipografia" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div style="clear:both; text-align:right; width:98%">
            <button type="button" value="Guardar" id="btnGuardar" name="Guardar" class="btnGuardar pull-right">
                <img src="@Url.Content("~/Imagenes/Guardar.png")" class="imagBotones" /> Guardar
            </button>
            <button type="button" value="Cancelar" id="btnCancelar" name="Cancelar" class="btnCancelar pull-right">
                <img src="@Url.Content("~/Imagenes/Cancelar.png")" class="imagBotones" /> Cancelar
            </button>
        </div>
    </div>
</div>

    <style>
        /* CSS REQUIRED */
        .state-icon {
            left: -5px;
        }

        .list-group-item-primary {
            color: rgb(255, 255, 255);
            background-color: rgb(66, 139, 202);
        }

        /* DEMO ONLY - REMOVES UNWANTED MARGIN */
        .well .list-group {
            margin-bottom: 0px;
        }
    </style>
